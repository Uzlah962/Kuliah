import java.io.*;
public class Siswa {

   public String name;

   public Siswa (String empName) {
      name = empName;
   }

   public void setSalary(double empSal) {
      salary = empSal;
   }

   public void printEmp() {
      System.out.println("name  : " + name );
      System.out.println("salary :" + salary);
   }

   public static void main(String args[]) {
      Siswa empOne = new Siswa("uzlah");
      empOne.setSalary(13000);
      empOne.printEmp();
   }
}
